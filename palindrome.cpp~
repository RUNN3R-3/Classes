#include <iostream>
#include <cstring>

using namespace std;

int main()
{
  int count = 0;
  int length = -1;
  cout << "Write a word" <<endl;
  char input[20];
  char input2[20];
  char inex[20];
  cin.clear();
  cin.get(input, 20);

  for (int i = 0; i < 20; i++){
    if (input [i] >= 65 && input [i] <= 90) {
      length++;
      if (input[i] != '\0') {
	inex[length] = input[i];
      }
    }
    else if (input [i] >= 97 && input [i] <= 122) {
      length++;
      if (input[i] != '\0') {
	inex[length] = input[i];
      }
    }
  }

  length++;
  inex[length] = '\0';

  cout << inex;
  cout << endl;
  
  //array
  for (int i = 0; i < length; i++) {
    if (inex [i] != '\0') {
      input2[length - i - 1] = inex[i];
      count++;
      cout << count << inex[i] << input2[length - i] << endl;
    }
  }

  input2[count + 1] = '\0';

  cout << endl;
  
  //compare
  if (strcmp(inex, input2) == 0) {
    cout << "It is a palindrome" << endl;
  }
  else {
    cout << "It is not a palindrome" << endl;
  }

  cout << "Your input - " << input << endl;
  cout << "Flipped char - " << input2 << endl;
  cout << "Length of word : " << length << endl;
  return 0;
}
